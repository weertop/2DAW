package Clases;


/**
 * Esta clase abstracta se referira a las Entradas, es abstracta ya que posee
 * varias subclases dependiendo del tipo de entrada: Joven, normal, tercera edad,etc  
 * @author Alberto Camara, Alexis Calderon
 *
 */

public abstract class Entradas {
	
	/**
	 * Atributo de Entradas
	 */
	private double precioEntrada;
	
	/**
	 * constructor de Entradas
	 * @param precioEntrada
	 */
	public Entradas(double precioEntrada){
	this.precioEntrada=precioEntrada;
	}
	
	/**
	 * Metodo para obtener un precio de entrada
	 * @return this.precioEntrada
	 */
	public double getprecioEntrada(){
		return this.precioEntrada;
	}
	
	/**
	 * Metodo abstracto para obetner el precio de
	 * la entrada, se devera codificar el metodo en 
	 * las subclases
	 * @return
	 */
	public abstract double getPrecio();
}
